    <h2>⏳ Зачекайте, йде обробка...</h2>
    <div class="timer" id="timer">5</div>

    <script>
        let t = 5;
        setInterval(() => {
            t--;
            document.getElementById('timer').innerText = t > 0 ? t : 'Готово!';
        }, 1000);
    </script>
